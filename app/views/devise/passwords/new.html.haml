#devise
  %h2 Forgot your password?
  = form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :post }) do |f|
    %div
      = f.label :email
      = f.email_field :email
    %div= f.submit "Reset Password", :class =>"button medium alt"
= render :partial => "devise/shared/links"
