%h2
  Edit Reminder

= form_for @reminder do |f|
  = f.label 'Subject:'
  = f.text_field :subject
  %p
  = f.label 'Reminder Date/Time:'
  = f.datetime_select :reminder_time
  = f.label Time.zone
  %p
    = f.text_area :body, class:'ckedit'
  %br
  = f.submit :submit
  = link_to 'cancel', root_path
