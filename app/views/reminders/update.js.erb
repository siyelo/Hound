var reminder_row = $("#<%= dom_id(@reminder) %>");

<% if @reminder.errors.empty? %>
  reminder_row.addClass('hidden');
  $("#reminder<%= @reminder.id %>_row").replaceWith("<%=j render @reminder %>")
  $('.status').show().html('saved');
  $('.status').fadeOut(2000).delay(1000);
<% else %>
  reminder_row.find('.errors').html("<%=j render('errors') %>")
<% end %>
