%tr.reminder{id: "reminder#{reminder.id}_row"}
  %td.large
    = link_to reminder_subject(reminder), edit_reminder_path(reminder), remote: true, class: 'subject_link'
  %td.large= reminder.send_at.to_formatted_s(:short_with_day)
  %td.small
    = form_tag reminder_path(reminder.id), method: :put, remote: true do
      = check_box_tag 'reminder[delivered]', '', reminder.delivered?, class: 'mark_as_complete', disabled: allow_changes(reminder)
