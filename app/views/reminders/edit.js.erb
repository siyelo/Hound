var reminderBody = $("#<%= dom_id(@reminder) %>");
var inlineReminder = reminderBody.find(".inline_reminder");

$('.js_reminder_body').addClass('hidden');
$('.js_reminder_body').find('.inline_reminder').html('');

reminderBody.removeClass('hidden');
inlineReminder.html("<%= j render 'form', reminder: @reminder, remote: true %>").fadeIn(300);
