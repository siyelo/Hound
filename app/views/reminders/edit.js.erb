var reminder_row = $("#<%= dom_id(@reminder) %>");
$('.reminder_row').hide();
$('.reminder_row').find('.inline_reminder').html('');

reminder_row.find(".inline_reminder").html("<%=j render 'form' %>");

reminder_row.fadeIn(300);
reminder_row.find('.reminder_body').tinymce({
  theme: "advanced",
  theme_advanced_buttons1: "bold,italic,underline, strikethrough",
  theme_advanced_buttons2: "",
  theme_advanced_buttons3: "",
  theme_advanced_buttons4: "",
  theme_advanced_toolbar_location: "top",
  theme_advanced_toolbar_align: "left"
});

reminder_row.find('.reminder_formatted_time').timePicker();
reminder_row.find('.reminder_formatted_date').datepicker({ dateFormat: 'yy-mm-dd' });
