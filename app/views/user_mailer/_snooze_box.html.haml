%div{:style => "width:230px;background-color:#ffffcc;border:1px solid #cacaca;padding:5px"}
  %table{:border => "0", :cellpadding => "4", :cellspacing => "0", :width => "230"}
    %tbody
      %tr
        %td{:colspan => "2", :style => "text-align:left"}
          %b Snooze for:
      %tr
        %td{:style => "text-align:right;width:5%"} Minutes:
        %td
          - EmailHelper.snooze_options([15,30,45], 'minutes', 'mi').each do |format|
            = link_to format[1], snooze_reminder_url(@reminder, :duration => format[0], :token => @reminder.snooze_token)
      %tr
        %td{:style => "text-align:right"} Hours:
        %td
          - EmailHelper.snooze_options([1,3,6,8,12], 'hours', 'h').each do |format|
            = link_to format[1], snooze_reminder_url(@reminder, :duration => format[0], :token => @reminder.snooze_token)
      %tr
        %td{:style => "text-align:right"} Days:
        %td
          - EmailHelper.snooze_options([1,2,3,4,5,6], 'days', 'd').each do |format|
            = link_to format[1], snooze_reminder_url(@reminder, :duration => format[0], :token => @reminder.snooze_token)
      %tr
        %td{:style => "text-align:right"} Weeks:
        %td
          - EmailHelper.snooze_options([1,2,3], 'weeks', 'w').each do |format|
            = link_to format[1], snooze_reminder_url(@reminder, :duration => format[0], :token => @reminder.snooze_token)
      %tr
        %td{:style => "text-align:right"} Months:
        %td
          - EmailHelper.snooze_options([1,3,6,12], 'months', 'mo').each do |format|
            = link_to format[1], snooze_reminder_url(@reminder, :duration => format[0], :token => @reminder.snooze_token)
