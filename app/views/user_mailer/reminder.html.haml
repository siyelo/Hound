!!!
%html
  %head
    %meta{ 'content' => "text/html; charset=UTF-8", 'http-equiv' => "Content-Type" }
  %body{:style => "font-size:12px;font-family:Helvetica,Arial,sans-serif;margin:20px 0 0;"}
    %table{:style => "margin: 0 auto;width:600px;"}
      %tbody
        %tr
          %td{:style=>"background: url(http://www.hound.cc/assets/bg-brown.png) #331A03; padding: 20px;"}
            = link_to "http://hound.cc/", :target => "_blank", :style => "outline:none;" do
              = image_tag"logo.png"
        %tr
          %td
            %h1{:style => "margin:40px 0 20px;"}= "Reminder: #{@original_subject}"

            %hr{:style => "background:none;border:none;border-top:2px dotted #ddd;"}

        = render 'menu'

        %tr
          %td{:style => "width:50%"}
            %p{:style => "font-size:16px"}== You created this reminder on #{@created_at}
            %p{:style => "font-size:16px"}== It has been snoozed #{@snoozed} times.

          %td{:style => "width:50%"}
            = render 'snooze_box'

        = render 'body', body: @body


