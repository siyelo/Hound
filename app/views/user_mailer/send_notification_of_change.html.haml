!!!
%html
  %head
    %meta{ 'content' => "text/html; charset=UTF-8", 'http-equiv' => "Content-Type" }
  %body{:style => "font-size:12px;font-family:Helvetica,Arial,sans-serif"}
    %table{:style => "600px"}
      %tr
        %td{:colspan => "2"}
          %p
            %strong Sup yo! Your reminder has undergone revisions:
          - if @reminder.send_at_changed?
            %p
              %strong Reminder Time:
            = "From: #{@reminder.send_at_change[0]}"
            %br
            = "To: #{@reminder.send_at_change[1]}"
          - if @reminder.body_changed?
            %p
              %strong Reminder Email:
              = body_changes(@reminder)
          %hr
      =render 'reminder_body'
